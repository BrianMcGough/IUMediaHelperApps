<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <!-- consult before changing -->
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <sectionGroup name="LookupTables">
      <section name="PlaybackSpeed" type="System.Configuration.DictionarySectionHandler" />
      <section name="TrackConfiguration" type="System.Configuration.DictionarySectionHandler" />
      <section name="SoundField" type="System.Configuration.DictionarySectionHandler" />
      <section name="TapeThickness" type="System.Configuration.DictionarySectionHandler" />
      <section name="PreservationProblem" type="System.Configuration.DictionarySectionHandler" />
      <section name="Damage" type="System.Configuration.DictionarySectionHandler" />
    </sectionGroup>
  </configSections>

  <!-- consult before changing -->
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <appSettings>
    <!-- project code to use -->
    <add key="ProjectCode" value="mdpi" />

    <!-- directories -->
    <add key="WhereStaffWorkDirectoryName" value="c:\work\mdpi" />
    <add key="ProcessingDirectoryName" value="c:\work\processing" />
    <add key="ErrorDirectoryName" value="c:\work\error" />
    <add key="SuccessDirectoryName" value="c:\work\success" />
    <add key="LogDirectoryName" value="c:\work\logs" />
    <!-- \\BL-MDPI-QC01\Shared\IU_Dropbox -->
    <add key="DropBoxDirectoryName" value="c:\work\dropbox" />

    <!-- helper applications -->
    <add key="PathToMetaEdit" value="C:\Dependencies\bwf-metaedit\bwfmetaedit.exe" />
    <add key="PathToFFMpeg" value="C:\Dependencies\ffmpeg\ffmpeg.exe" />
    <add key="ffmpegAudioProductionArguments"
         value="-c:a pcm_s24le -b:a 128k -strict -2 -ar 96000 -write_bext 1 -rf64 auto" />
    <add key="ffmpegAudioAccessArguments" value="-c:a aac -b:a 192k -strict -2 -ar 96000" />
    <add key="ffmpegVideoMezzanineArguments" value="-map 0 -vf &quot;fieldorder=tff,pad=width=720:height=512:x=0:y=26:color=black&quot; -pix_fmt yuv422p -codec:v mpeg2video -bsf:v imxdump -tag:v mx5n -aspect 4:3 -minrate:v 50000k -maxrate:v 50000k -b:v 50000k -flags +ilme+ildct+low_delay -dc 10 -intra_vlc 1 -non_linear_quant 1 -ps 1 -qmin 1 -qmax 3 -lmin QP2LAMBDA -qscale:v 1 -rc_min_vbv_use 1 -rc_max_vbv_use 1 -g 1 -bufsize 1668334 -rc_init_occupancy 1668334 -seq_disp_ext 0 -codec:a pcm_s24le -f mov"/>
    <add key="ffmpegVideoAccessArguments" value="-pix_fmt yuv420p -c:v libx264 -profile:v high -level 3.1 -b:v 3M -c:a aac -strict -2 -b:a 128k -ar 48000 -filter_complex &quot;[0:a:0][0:a:1]amerge=inputs=2[aout]&quot; -map 0:v -map &quot;[aout]&quot; -f mp4"/>
    
    <!-- web-service-->
    <add key="PodAuthorizationFile" value="c:\dependencies\pod-Auth.xml" />
    <add key="WebServiceUrl" value="https://pod.mdpi.iu.edu/" />
    <add key="UnitPrefix" value="Indiana University-Bloomington. " />

    <!-- email notifier settings (optional) -->
    <add key="SmtpServer" value="mail-relay.iu.edu" />
    <add key="FromEmailAddress" value="bmoberly@iu.edu" />
    <add key="IssueNotifyEmailAddresses" value="bmoberly@iu.edu" />

    <!-- clean-up settings -->
    <add key="DeleteProcessedAfterInDays" value="14" />
  </appSettings>

  <LookupTables>
    <PlaybackSpeed>
      <add key="zero_point9375_ips" value=".9375 ips" />
      <add key="one_point875_ips" value="1.875 ips" />
      <add key="three_point75_ips" value="3.75 ips" />
      <add key="seven_point5_ips" value="7.5 ips" />
      <add key="fifteen_ips" value="15 ips" />
      <add key="thirty_ips" value="30 ips" />
      <add key="unknown_playback_speed" value="Unknown" />
    </PlaybackSpeed>

    <TrackConfiguration>
      <add key="full_track" value="Full track" />
      <add key="half_track" value="Half track" />
      <add key="quarter_track" value="Quarter track" />
      <add key="unknown_track" value="Unknown" />
    </TrackConfiguration>

    <SoundField>
      <add key="mono" value="Mono" />
      <add key="stereo" value="Stereo" />
    </SoundField>

    <TapeThickness>
      <add key="zero_point5_mils" value=".5" />
      <add key="one_mils" value="1.0" />
      <add key="one_point5_mils" value="1.5" />
    </TapeThickness>

    <PreservationProblem>
      <add key="breakdown_of_materials" value="Breakdown of materials" />
      <add key="delamination" value="Delamination" />
      <add key="exudation" value="Exudation" />
      <add key="fungus" value="Fungus" />
      <add key="other_contaminants" value="Other contaminants" />
      <add key="oxidation" value="Oxidation" />
      <add key="soft_binder_syndrome" value="Soft binder syndrome" />
      <add key="vinegar_syndrome" value="Vinegar syndrome" />
    </PreservationProblem>

    <Damage>
      <add key="broken" value="Broken" />
      <add key="cracked" value="Cracked" />
      <add key="dirty" value="Dirty" />
      <add key="fungus" value="Fungus" />
      <add key="scratched" value="Scratched" />
      <add key="warped" value="Warped" />
      <add key="worn" value="Worn" />
    </Damage>
  </LookupTables>

  <!-- logger: consult before changing -->
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="GeneralFileLogger" xsi:type="file" layout="${date} ${message}"
              fileName="${LogDirectoryName}\Packager_${shortdate}.log" keepFileOpen="false" encoding="iso-8859-2" />
    </targets>

    <rules>
      <logger name="GeneralFileLogger" minlevel="Debug" writeTo="GeneralFileLogger" />
    </rules>
  </nlog>
</configuration>